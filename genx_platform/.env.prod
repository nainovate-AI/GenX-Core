# Production Environment Configuration
ENVIRONMENT=production
VERSION=1.0.0

# Service Configuration
LLM_SERVICE_PORT=50053
LLM_METRICS_PORT=9091
DEFAULT_MODEL_ID=gpt2
BACKEND_TYPE=transformers

# Resource Limits
LLM_CPU_LIMIT=4
LLM_MEMORY_LIMIT=8G
LLM_CPU_RESERVATION=2
LLM_MEMORY_RESERVATION=4G

# Performance Tuning
GRPC_MAX_WORKERS=20
MAX_CONCURRENT_REQUESTS=20

# Security
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme-production-password
GRAFANA_ROOT_URL=https://monitoring.yourdomain.com

# Model Cache
MODEL_CACHE_PATH=/opt/genx/models

# Logging
JAEGER_LOG_LEVEL=info